generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum UserRole {
  ADMIN
  TECHNICIAN
  MANAGER
  CLIENT
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum PriorityLevel {
  LOW
  NORMAL
  HIGH
  URGENT
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  passwordHash String
  name         String
  role         UserRole      @default(TECHNICIAN)
  phone        String?
  isActive     Boolean       @default(true)
  
  orders       Order[]
  refreshToken RefreshToken?
  
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  @@map("users")
}

model Order {
  id          String        @id @default(cuid())
  userId      String
  title       String
  description String
  status      OrderStatus   @default(PENDING)
  priority    PriorityLevel @default(NORMAL)
  
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  checklist   Checklist[]
  photos      Photo[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  completedAt DateTime?
  scheduledAt DateTime?
  
  @@index([status])
  @@index([userId])
  @@index([createdAt])
  @@map("orders")
}

model Checklist {
  id        String   @id @default(cuid())
  orderId   String
  title     String
  completed Boolean  @default(false)
  required  Boolean  @default(true)
  order     Int      @default(0)
  
  orderRef  Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([orderId])
  @@map("checklists")
}

model Photo {
  id           String   @id @default(cuid())
  orderId      String
  filename     String
  url          String
  size         Int
  mimeType     String
  description  String?
  
  order        Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
  
  @@index([orderId])
  @@map("photos")
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String   @unique
  token     String   @unique
  expiresAt DateTime
  revoked   Boolean  @default(false)
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}